rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // POS App - No Authentication Required
    // All collections allow full read/write access for POS operations
    
    // Products collection - store product information
    match /products/{productId} {
      allow read, write: if true;
    }
    
    // Customers collection - store customer information
    match /customers/{customerId} {
      allow read, write: if true;
    }
    
    // Bills collection - store billing information
    match /bills/{billId} {
      allow read, write: if true;
    }
    
    // Stock updates collection - track inventory changes
    match /stock_updates/{updateId} {
      allow read, write: if true;
    }
    
    // Settings collection - app configuration
    match /settings/{settingId} {
      allow read, write: if true;
    }
    
    // Connection test collection - for testing connectivity
    match /connection_test/{testId} {
      allow read, write: if true;
    }
  }
}